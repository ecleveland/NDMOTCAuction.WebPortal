@model IEnumerable<NDMOTC_Auction.WebPortal.Entities.Item>

@{
    ViewBag.Title = "Settle Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Settle Items</h2>
@using (Html.BeginForm("SettleItem", "Items", FormMethod.Get))
{
    <div>
        Enter Item #:
        @Html.TextBox("itemId")
        <input class="btn btn-primary btn-sm" type="submit" value="Search" />
    </div>
}
<table class="table">
    <tr>
        <th>
            Item #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyoutPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Guest.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuyoutPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Guest.FirstName)
        </td>
        <td>
            @Html.ActionLink("Settle Item", "SettleItem", new { itemId=item.Id })
        </td>
    </tr>
}

</table>
